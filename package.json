{
  "name": "md-to-notion",
  "version": "0.1.0",
  "description": "Import markdown files to Notion, with support for Obsidian syntax",
  "module": "index.ts",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "md-to-notion": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/cli.ts --outdir ./dist --target node && node -e \"const fs=require('fs');const f='dist/cli.js';const c=fs.readFileSync(f,'utf8');fs.writeFileSync(f,'#!/usr/bin/env node\\n'+c.replace(/^#!.*\\n/,''))\"",
    "start": "bun run src/cli.ts",
    "test": "bun test",
    "test:cov": "bun test --coverage",
    "lint": "biome lint",
    "format": "biome format --write",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "notion",
    "markdown",
    "obsidian",
    "import"
  ],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@notionhq/client": "^5.9.0",
    "js-yaml": "^4.1.1"
  }
}
